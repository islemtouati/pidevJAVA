<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxx.controllers.GestionUserController">

    <TableView fx:id="userTable" layoutX="30.0" layoutY="58.0" prefHeight="285.0" prefWidth="540.0">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50" text="ID">
                <cellValueFactory>
                    <PropertyValueFactory property="id" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="colNom" prefWidth="100" text="Nom" />
            <TableColumn fx:id="colPrenom" prefWidth="100" text="Prenom" />
            <TableColumn fx:id="colEmail" prefWidth="150" text="Email" />
            <TableColumn fx:id="colAdresse" prefWidth="150" text="Adresse" />
            <TableColumn fx:id="colTel" prefWidth="100" text="Téléphone" />
            <TableColumn fx:id="colRole" prefWidth="100" text="Rôle" />
            <TableColumn fx:id="colUpdate" prefWidth="50" text="Update">
                <cellValueFactory>
                    <PropertyValueFactory property="updateButton" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="colDelete" prefWidth="50" text="Delete">
                <cellValueFactory>
                    <PropertyValueFactory property="deleteButton" />
                </cellValueFactory>
            </TableColumn>        </columns>
    </TableView>
    <Button fx:id="btn_logout" layoutX="468.0" layoutY="21.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="102.0" text="Logout" textFill="#c73333" />
    <Button fx:id="addUser" layoutX="468.0" layoutY="354.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="102.0" text="Ajouter" />

    <!-- Define buttons and other UI elements as needed -->

</AnchorPane>
