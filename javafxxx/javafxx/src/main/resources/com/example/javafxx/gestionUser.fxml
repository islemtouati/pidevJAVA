<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxx.controllers.GestionUserController">

    <TableView fx:id="userTable" layoutX="30.0" layoutY="58.0" prefHeight="285.0" prefWidth="540.0">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50" text="ID">
                <cellValueFactory>
                    <PropertyValueFactory property="id" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="colNom" prefWidth="100" text="Nom" />
            <TableColumn fx:id="colPrenom" prefWidth="100" text="Prenom" />
            <TableColumn fx:id="colEmail" prefWidth="150" text="Email" />
            <TableColumn fx:id="colAdresse" prefWidth="150" text="Adresse" />
            <TableColumn fx:id="colTel" prefWidth="100" text="Téléphone" />
            <TableColumn fx:id="colRole" prefWidth="100" text="Rôle" />
            <TableColumn fx:id="colUpdate" prefWidth="50" text="Update">
                <cellValueFactory>
                    <PropertyValueFactory property="updateButton" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="colDelete" prefWidth="50" text="Delete">
                <cellValueFactory>
                    <PropertyValueFactory property="deleteButton" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="colBan" prefWidth="50" text="Ban">
                <cellValueFactory>
                    <PropertyValueFactory property="banButton" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <TextField fx:id="searchTextField" layoutX="30.0" layoutY="21.0" prefHeight="25.0" prefWidth="200.0" promptText="Search..." />
    <Button fx:id="exportPDF" layoutX="360.0" layoutY="354.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="102.0" style="-fx-background-color: gray;" text="Export PDF" textFill="WHITE" onAction="#handleExportPDF">
        <font>
            <Font name="Bauhaus 93" size="12.0" />
        </font>
    </Button>

    <Button fx:id="btn_logout" layoutX="468.0" layoutY="21.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="102.0" style="-fx-background-color: black;" text="Logout" textFill="WHITE">
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
    </Button>

    <Button fx:id="addUser" layoutX="468.0" layoutY="354.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="102.0" style="-fx-background-color: black;" text="Ajouter" textFill="WHITE" />

    <!-- Define buttons and other UI elements as needed -->

</AnchorPane>
